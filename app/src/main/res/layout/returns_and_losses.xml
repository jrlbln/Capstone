<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReturnsAndLosses">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="208dp"
        android:layout_height="255dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/save_button"
        app:layout_constraintStart_toStartOf="@+id/save_button"
        app:layout_constraintTop_toBottomOf="@+id/save_button"
        app:srcCompat="@drawable/itemreturnloss" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="205dp"
        android:layout_height="102dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppinsreg"
        android:text="Loss and Returns"
        android:textColor="#040404"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/item_returns"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_returns"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/item_returns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:width="300dp"
        android:background="@drawable/inputdesign"
        android:elevation="2dp"
        android:ems="10"
        android:fontFamily="@font/poppinsreg"
        android:hint="Enter Item Return Quantity"
        android:inputType="number"
        android:paddingStart="10dp"
        android:shadowColor="#2C2C2C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/item_losses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:width="300dp"
        android:background="@drawable/inputdesign"
        android:elevation="2dp"
        android:ems="10"
        android:fontFamily="@font/poppinsreg"
        android:hint="Enter Item Loss Quantity"
        android:inputType="number"
        android:paddingStart="10dp"
        android:shadowColor="#2C2C2C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/item_returns"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_returns"
        app:layout_constraintTop_toBottomOf="@+id/item_returns" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:width="200dp"
        android:background="@drawable/gradientbutton"
        android:clickable="true"
        android:fontFamily="@font/poppinsreg"
        android:text="Save"
        android:textColor="#ffffff"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/item_losses"
        app:layout_constraintStart_toStartOf="@+id/item_losses"
        app:layout_constraintTop_toBottomOf="@+id/item_losses" />

</androidx.constraintlayout.widget.ConstraintLayout>